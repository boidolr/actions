{
    "description": "Enable updates for pre-commit hooks & automerge select updates",
    "extends": [
        ":enablePreCommit"
    ],
    "packageRules": [
        {
            "matchPackagePatterns": [
                "^pre-commit/",
                "^boidolr/",
                "^astral-sh/"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true
        }
    ]
}
