{
    "description": "Enable automerge for GitHub Actions",
    "extends": [
        "customManagers:githubActionsVersions"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "github-actions"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pinDigest",
                "digest"
            ],
            "automerge": true
        }
    ]
}
